source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem "jquery-rails", "3.0.1"
gem "bootstrap-sass", "2.3.2.0"
gem "faker", "1.1.2"
gem "will_paginate", "3.0.4"
gem "bootstrap-will_paginate", "0.0.9"
gem "mysql2", "0.3.11"
gem "rails-i18n", "0.7.3"
gem "devise", "2.2.4"
gem "cancan", "1.6.10"
gem "rolify", "3.2.0"
