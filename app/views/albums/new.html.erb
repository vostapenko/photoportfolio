<% provide(:title, 'Add album') %>
<h1>Add album</h1>

<div class="row">
  <div class="span2">
    <%= form_for([@genre, @album]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>

      <%= f.submit "Add", class: "btn" %>
    <% end %>
  </div>
</div>
