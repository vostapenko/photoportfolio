<p>
<ul>
  <li class="span3">
    <div class="thumbnail center">
      <%= link_to (image_tag title_genre_image(genre)), genre %>
      <h4>
        <%= link_to genre.name, genre %> - <%= genre.albums.count %> albums
      </h4> 
      <h5>
        <%= link_to "Edit", edit_genre_url(genre) %> 
        <%= link_to "Delete", genre, method: :delete, data: { confirm: "You sure?" } %>
      </h5>
    </div>
  </li>
</ul>
</p>
