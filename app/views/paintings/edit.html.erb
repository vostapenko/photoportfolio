<% provide(:title, 'Edit painting') %>
<h1>Edit painting</h1>

<div class="row">
  <div class="span2">
    <%= form_for([@album, @painting]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>

      <%= f.submit "Save", class: "btn" %>
    <% end %>
  </div>
</div>
