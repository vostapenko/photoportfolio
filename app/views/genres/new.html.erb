<% provide(:title, 'Add Genre') %>
<h1>Add Genre</h1>

<div class="row">
  <div class="span2">
    <%= form_for(@genre) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>

      <%= f.submit "Add", class: "btn" %>
    <% end %>
  </div>
</div>
